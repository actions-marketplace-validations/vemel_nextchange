{
  "name": "@actions/nextchange",
  "version": "0.0.1",
  "private": false,
  "description": "Parse and update CHANGELOG.md action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build -o dist src/index.ts",
    "test": "jest",
    "test-cov": "jest --coverage",
    "lint": "eslint **/*.ts --cache",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "uglify": "uglifyjs dist/index.js -cm > dist/index.min.js && rm dist/index.js && mv dist/index.min.js dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vemel/nextchange.git"
  },
  "keywords": [
    "actions",
    "node",
    "version",
    "keepachangelog",
    "changelog"
  ],
  "author": "GitHub",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/node": "^12.20.6",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3",
    "uglify-js": "^3.13.2"
  }
}
